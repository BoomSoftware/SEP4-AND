<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="title2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>1

    <style name="sub_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="select_button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/contrast_green</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="select_button_dark">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="box_with_inputs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:backgroundTint">@color/contrast_green</item>
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:background">@drawable/input_only_borders</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="input_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="green_button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/contrast_green</item>
    </style>
</resources>