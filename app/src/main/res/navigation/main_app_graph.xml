<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_app_graph.xml"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.sep4_android.views.mainapp.MainPageFragment"
        android:label=""
        tools:layout="@layout/fragment_main_page" >
        <action
            android:id="@+id/action_mainPageFragment_to_addGardenFragment"
            app:destination="@id/addGardenFragment" />
        <action
            android:id="@+id/action_mainPageFragment_to_gardenListFragment"
            app:destination="@id/gardenListFragment" />
        <action
            android:id="@+id/action_mainPageFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addGardenFragment"
        android:name="com.example.sep4_android.views.mainapp.AddGardenFragment"
        android:label=""
        tools:layout="@layout/fragment_add_garden" />
    <fragment
        android:id="@+id/gardenListFragment"
        android:name="com.example.sep4_android.views.mainapp.GardenListFragment"
        android:label=""
        tools:layout="@layout/fragment_garden_list" >
        <action
            android:id="@+id/action_gardenListFragment_to_addPlantFragment"
            app:destination="@id/addPlantFragment" />
        <action
            android:id="@+id/action_gardenListFragment_to_plantOverviewFragment"
            app:destination="@id/plantOverviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.sep4_android.views.mainapp.SettingsFragment"
        android:label="" />
    <fragment
        android:id="@+id/addPlantFragment"
        android:name="com.example.sep4_android.views.mainapp.AddPlantFragment"
        android:label="fragment_add_plant"
        tools:layout="@layout/fragment_add_plant" >
        <action
            android:id="@+id/action_addPlantFragment_to_addSensorsFragment"
            app:destination="@id/addSensorsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addSensorsFragment"
        android:name="com.example.sep4_android.views.mainapp.AddSensorsFragment"
        android:label=""
        tools:layout="@layout/fragment_add_sensors" >
        <action
            android:id="@+id/action_addSensorsFragment_to_gardenListFragment"
            app:destination="@id/gardenListFragment" />
    </fragment>
    <fragment
        android:id="@+id/plantOverviewFragment"
        android:name="com.example.sep4_android.views.mainapp.PlantOverviewFragment"
        android:label="fragment_plant_overview"
        tools:layout="@layout/fragment_plant_overview" />
</navigation>